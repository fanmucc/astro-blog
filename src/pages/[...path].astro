			<div class='article-content'>
				<Content />
			</div>
			{
				page.data.tags && page.data.tags.length > 0 && (
					<aside class='article-tags'>
						{/* <div class='tags-list'>
							{page.data.tags.map((tag) => (
								<span class='tag-item'>#{tag}</span>
							))}
						</div> */}
						<div class='text-right'>
