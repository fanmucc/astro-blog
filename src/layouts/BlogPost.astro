export interface Props {
	title: string;
	description: string;
	pubDate: Date;
	updatedDate?: Date;
	heroImage?: string;
	tags: string[];
	category: string;
	author?: string;
	readingTime?: number;
}

const {
	title,
	description,
	pubDate,
	updatedDate,
	heroImage,
	tags,
	category,
	author = "Âçö‰∏ª",
	readingTime,
} = Astro.props;

// Ê†ºÂºèÂåñÊó•Êúü
const formatDate = (date: Date) => {
	return date.toLocaleDateString("zh-CN", {
		year: "numeric",
		month: "long",
		day: "numeric",
	});
};

// ÁîüÊàêÁõÆÂΩï
const headings = await Astro.slots.render("default").then((content) => {
	const headingRegex = /<h([2-4])[^>]*id="([^"]*)"[^>]*>([^<]*)<\/h[2-4]>/g;
	const headings = [];
	let match;

	while ((match = headingRegex.exec(content)) !== null) {
		headings.push({
			level: parseInt(match[1]),
			id: match[2],
			text: match[3],
		});
	}

	return headings;
});
