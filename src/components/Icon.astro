// 检查是否为URL (包含 http, https, 或以 / 开头的相对路径)
const isImageUrl = (iconName: string) => {
	console.log(iconName);
	return (
		iconName.startsWith("http") ||
		iconName.startsWith("https") ||
		iconName.startsWith("/")
	);
};
---

{
	isImageUrl(name) ? (
		<img src={name} alt='icon' class={className} />
	) : (
		<svg class={className} fill='currentColor' viewBox='0 0 20 20'>
			<Fragment set:html={icons[name as keyof typeof icons] || icons.home} />
		</svg>
	)
}
