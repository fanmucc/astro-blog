			// æ£€æŸ¥è®¾å¤‡å†…å­˜ï¼ˆå¦‚æœå¯ç”¨ï¼‰
			const nav = navigator as any;
			if (nav.deviceMemory && nav.deviceMemory < 4) return false;
			
			// æ£€æŸ¥ç¡¬ä»¶å¹¶å‘ï¼ˆCPU æ ¸å¿ƒæ•°ï¼‰
			if (nav.hardwareConcurrency && nav.hardwareConcurrency < 4) return false;
			
