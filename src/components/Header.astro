			}

			const html = document.documentElement;
			const isDark = html.classList.contains('dark');

			// è®¾ç½®æ‰‡å½¢åŠ¨ç”»çš„èƒŒæ™¯è‰²
			if (isDark) {
				html.style.setProperty('--theme-ripple-bg', '#ffffff');
			} else {
				html.style.setProperty('--theme-ripple-bg', '#0f172a');
			}

			// æ·»åŠ è¿‡æ¸¡ç±»
			html.classList.add('theme-transitioning');

			try {
				// åˆ›å»ºæ‰‡å½¢åŠ¨ç”»å¹¶ç­‰å¾…åˆ‡æ¢ç‚¹
				const ripple = await createRippleEffect(themeToggle!);

				// ä½¿ç”¨ requestAnimationFrame ç¡®ä¿åœ¨ä¸‹ä¸€å¸§æ‰§è¡Œä¸»é¢˜åˆ‡æ¢
				requestAnimationFrame(() => {
					// åˆ‡æ¢ä¸»é¢˜
					if (isDark) {
						html.classList.remove('dark');
						localStorage.setItem('theme', 'light');
						console.log('ğŸŒ åˆ‡æ¢åˆ°æµ…è‰²æ¨¡å¼');
					} else {
						html.classList.add('dark');
						localStorage.setItem('theme', 'dark');
						console.log('ğŸŒ™ åˆ‡æ¢åˆ°æ·±è‰²æ¨¡å¼');
					}
				});

				// ç­‰å¾…åŠ¨ç”»å®Œå…¨ç»“æŸåæ¸…ç†
				requestAnimationFrame(() => {
					setTimeout(() => {
						html.classList.remove('theme-transitioning');
						if (ripple && ripple.parentNode) {
							ripple.remove();
						}
						isTransitioning = false;
					}, 300); // ç»™ä¸»é¢˜å˜é‡åˆ‡æ¢ç•™å‡ºæ—¶é—´
				});

			} catch (error) {
				console.error('ä¸»é¢˜åˆ‡æ¢åŠ¨ç”»å‡ºé”™:', error);
				// å¤±è´¥æ—¶ç›´æ¥åˆ‡æ¢ä¸»é¢˜
				if (isDark) {
					html.classList.remove('dark');
					localStorage.setItem('theme', 'light');
				} else {
					html.classList.add('dark');
					localStorage.setItem('theme', 'dark');
				}
				html.classList.remove('theme-transitioning');
				isTransitioning = false;
			}
		}

		// ç»‘å®šç‚¹å‡»äº‹ä»¶
		themeToggle.addEventListener('click', () => toggleTheme());
	}

